generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id     Int    @id @default(autoincrement())
  txHash String @unique
  cbor   String

  addressToWatch   AddressToWatch? @relation(fields: [addressToWatchId], references: [id])
  addressToWatchId Int?

  @@index([addressToWatchId])
  @@index([txHash])
}

enum LocalStateType {
  Unspecified
  Course
  Assignment
  ModuleRef
  Treasury
  Escrow
  ContributorState
}

// AddressToWatch is a table to store addresses we want to watch
model AddressToWatch {
  id           Int             @id @default(autoincrement())
  key          String
  value        String          @unique
  type         LocalStateType? // Optional enum field
  transactions Transaction[]

  @@index([key])
  @@index([type])
}

model AddressToWatchSyncTip {
  id        Int    @id @default(autoincrement())
  slot      Int    @unique
  blockHash String @unique
}
